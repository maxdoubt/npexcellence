section {
  text-align: center;
  padding: 50px;
  margin: 0px 0px 0px 0px;
  color: #fff;
  position: relative;
  overflow: hidden;
}

// the logo

section:after{
  content: ' ';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: .2;
  background-image: url(<%= Setting.first.logo.url(:thumb) %>);
  background-repeat: no-repeat;
  background-position: 50% 50%;
}

// the background color

section:before{
  content: ' ';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  opacity: 1;
  background-position: 50% 50%;
  background-color: $brand-primary;
}