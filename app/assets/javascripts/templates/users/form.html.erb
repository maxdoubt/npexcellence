<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <header class="page-header">
      <h2>User</h2>
    </header>
    <form role="form" novalidate name="userForm">
      <div class="form-group" ng-class="{'has-error': !userForm.user_isbn.$valid}">
        <label for="user_isbn"><%= User.human_attribute_name :isbn %></label>
        <input type="text" name="user_isbn" ng-model="user.isbn" class="form-control" required />
      </div>
      <div class="form-group" ng-class="{'has-error': !userForm.user_author.$valid}">
        <label for="user_author"><%= User.human_attribute_name :author %></label>
        <input type="text" name="user_author" ng-model="user.author" class="form-control" required />
      </div>
      <div class="form-group" ng-class="{'has-error': !userForm.user_title.$valid}">
        <label for="user_title"><%= User.human_attribute_name :title %></label>
        <input type="text" name="user_title" ng-model="user.title" class="form-control" required />
      </div>
      <div class="form-group" ng-class="{'has-error': !userForm.user_isbn.$valid, 'has-warning': user.price == 0}">
        <label for="user_price"><%= User.human_attribute_name :price %></label>
        <div class="input-group">
          <span class="input-group-addon">$</span>
          <input type="number" step="any" min="0" name="user_title" ng-model="userHumanPrice" class="form-control" required />
        </div>
      </div>
      <div class="actions">
        <a ng-href="/" class="btn btn-default">Back</a>
        <div class="pull-right">
          <button class="btn btn-primary" ng-click="submitUser()" ng-disabled="!userForm.$valid">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>
