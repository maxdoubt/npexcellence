.well
  .row
    .col-md-4
      %dl.dl-horizontal
        %dt= User.human_attribute_name('email')
        %dd= user.email

        %dt= User.human_attribute_name('name')
        %dd= user.name

        %dt= User.human_attribute_name('title')
        %dd= user.title

    .col-md-4
      %dl.dl-horizontal
        %dt= User.human_attribute_name('phone')
        %dd= user.phone

        %dt= User.human_attribute_name('address')
        %dd= user.address

        %dt= User.human_attribute_name('bio')
        %dd= user.bio

    .col-md-4
      - if user.avatar.exists?
        = image_tag user.avatar.url(:thumb)