/ - content_for :js_onready do
/   = err_supply(@org)

%fieldset.well
  .row
    .col-md-12
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'

      .form-group
        = f.label :role
        = f.select :role, Org::ROLES.collect {|s| [s.capitalize, s]}, {}, {class: 'form-control'}

      .form-group
        = f.label :active
        = f.check_box :active, class: 'form-control'


  .row
    .col-md-6
      .form-group
        = f.label :phone
        = f.text_field :phone, class: 'form-control'

      .form-group
        = f.label :address
        = f.text_field :address, class: 'form-control'

      .form-group
        = f.label :email
        = f.text_field :email, class: 'form-control'

      .form-group
        = f.label :website
        = f.text_field :website, class: 'form-control'

      .form-group
        = f.label :contact
        = f.text_field :contact, class: 'form-control'

    .col-md-6
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control'


      .form-group
        = f.label :funding
        = f.text_area :funding, class: 'form-control'


      .form-group
        = f.label :logo
        = f.file_field :logo
        - if @org.logo.exists?
          = image_tag @org.logo.url(:medium)

      .form-group
        = f.label :photo
        = f.file_field :photo
        - if @org.photo.exists?
          = image_tag @org.photo.url(:medium)



= button_tag t('buttons.save'), class: 'btn btn-primary'
= link_to t('buttons.cancel'), admin_posts_path, class: 'btn btn-default'