%li
  = link_to page.title, page

  .pull-right
    = link_to 'Edit', edit_page_path(page), class: 'btn btn-default'
    = link_to 'Delete', page_path(page), class: 'btn btn-danger', method: 'delete', data: { confirm: "Are you sure?" }

  - page.children.each do |page|
    %ul
      = render 'row', page: page